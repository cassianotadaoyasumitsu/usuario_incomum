<div class="container bg-white pb-5">
  <div class="row d-flex justify-content-start align-items-center mt-sm-5">
    <div class="col-lg-5 col-10">
      <div id="circle" style="display: none;"></div>
      <div class=""><%= image_tag 'roxo.png', class: 'ml-5' %> </div>
    </div>
    <div class="col-lg-4 offset-lg-2 col-md-6 offset-md-3">
      <div class="pt-4">
        <h1 class="text-center">Usu√°rio Incomum</h1>
      </div>
      <div class="mt-3 mt-md-5">
        <h5>Log in to your account</h5>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="d-flex flex-column pb-3">
          <%= f.input :email,
          required: false,
          autofocus: true,
          input_html: { autocomplete: "email" } %>
        </div>
        <div class="d-flex flex-column pb-3">
          <%= f.input :password,
          required: false,
          input_html: { autocomplete: "current-password" } %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
        </div>
        <div class="register mt-5">
          <%= render "devise/shared/links" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
