<div class="container bg-white pb-5">
  <div class="row d-flex justify-content-start align-items-center mt-sm-5">
    <div class="col-lg-5 col-10">
      <div id="circle" style="display: none;"></div>
      <div class=""><%= image_tag 'roxo.png', class: 'ml-5' %> </div>
    </div>
    <div class="col-lg-4 offset-lg-2 col-md-6 offset-md-3">
      <div class="pt-4">
        <h1>Reenviar email de confirmação</h1>
      </div>
      <div class="mt-3 mt-md-5">
        <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>
        <%= f.full_error :confirmation_token %>

        <div class="d-flex flex-column pb-3">
          <%= f.input :email,
          required: true,
          autofocus: true,
          value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
          input_html: { autocomplete: "email" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "REENVIAR", class: "btn btn-primary btn-block" %>
        </div>
        <% end %>
      </div>
      <div class="register mt-5">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
