
  <div class="container">
    <div class="content">

    <h4 class="fonts"><%= @keeps.count %> <%= t('jobs keeped here')%></h4>
    <% @keeps.each do |keep| %>
    <% post = keep.post %>
    <div class="card-container">

    <%= link_to post_path(post), class: "text-decoration-none" do %>
    <div class="card-banner">
      <div class="card-company">
          <h5><%= post.company %></h5>
      </div>
    </div>

    <div class="card-body">
      <div class="card-title">
        <h3><%= post.title %></h3>
      </div>
      <div class="card-summary">
          <p><%= t('salary') %>: Â¥ <%= post.value %> /hr</p>
          <p><%= t('prefecture') %>: <%= post.prefecture %></p>
          <p><%= t('description') %>: <%= simple_format post.description %></p>
        <% end %>
      </div>
        <!-- <div class="card-tags">
          <ul>
            <li><a href="#">Tokyo</a></li>
            <li><a href="#">Hotel</a></li>
            <li><a href="#">Full-Time</a></li>
          </ul>
        </div> -->
      </div>

      <div class="card-footer">
        <ul>
          <li class="published-date">Postado em <%= post.created_at.strftime("%F") %> </li>
          <li class="counting-icon"><shares-count data-toggle="modal" data-target="#shareModal" :post-id="<%= post.id %>"></shares-count></li>
          <%= render partial: "posts/share_modal", locals: {post:post} %>
          <li>
          <%= link_to t('Unkeep'), class: "counting-icon",
          method: :delete,
          data: { confirm: t('are_you_sure') } %></li>
        </ul>
      </div>
    </div>
    <% end %>
  </div>
</div>
