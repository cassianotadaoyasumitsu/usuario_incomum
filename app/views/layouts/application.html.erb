<!DOCTYPE html>
<html>
<head>
  <!-- Global site tag (gtag.js) - Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-139583651-1"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'UA-139583651-1');
  </script>
  <!-- js -->
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <title>Usu√°rio Incomum</title>

  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="mobile-web-app-capable" content="yes">
  <link rel="manifest" href="<%= asset_path 'manifest.json' %>">
  <%= render 'shared/ios_pwa_links' %>

  <script type='text/javascript' src='https://platform-api.sharethis.com/js/sharethis.js#property=6086c37a5bceea0018b2b0a0&product=inline-share-buttons' async='async'></script>
</head>

<body>
<!-- navbar -->
    <% if user_signed_in? %>
      <%= render 'shared/login_navbar' %>
    <% else %>
      <%= render 'shared/public_navbar' %>
    <% end%>
<!-- content -->
    <% unless params[:controller] == "pages" && params[:action] == "home" || params[:controller] == "posts" && params[:action] == "index"%>
      <div class="container">
        <div class="content">
    <% end %>

      <div data-behavior="vue-app">
        <%= render 'shared/flashes' %>
        <%= yield %>
      </div>

    <% unless params[:controller] == "pages" && params[:action] == "home" %>
      </div>
        </div>
    <% end %>
<!-- footer -->
    <div class="footer">
      <%= render 'shared/footer' %>
    </div>
</body>
</html>
