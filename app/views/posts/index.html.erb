
<div class="container p-5 mt-5 mb-5">
  <div class="row justify-content-around">
    <% @posts.shuffle.each do |post| %>
    <div class="card text-center" style="width: 18rem;">
      <%= link_to post_path(post), class: "text-decoration-none" do %>
      <div class="card-header">
        <%= post.title %>
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= post.prefecture %></h5>
        <p class="card-text"><%= simple_format post.description %></p>
        <p class="card-text">Â¥ <%= post.value %></p>
      <% end %>
      </div>
      <div class="d-flex justify-content-center card-footer text-muted ">
        <p>Postado em <%= post.created_at.strftime("%F") %> </p>
      </div>
    </div>
    <% end %>
  </div>
</div>
