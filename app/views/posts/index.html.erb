  <div class="sub-banner">
    <%= render 'shared/sub_search_bar' %>
  </div>
  <div class="container">
    <div class="content">
    <% if @search == "" %>
    <h4><%= @posts.count %> <%= t('jobs posted here')%></h4>
    <% else %>
    <h4><%= @posts.count %> <%= t('jobs found for keyword:')%> <%= @search %></h4>
    <% end %>

    <% @posts.each do |post| %>
      <div class="card-container">

      <div class="card-banner">
        <div class="card-company">
            <h5><%= post.company %></h5>
        </div>
      </div>

      <div class="card-body">
        <div class="card-title">
          <h3><%= post.title %></h3>
        </div>
        <div class="card-summary">
          <%= link_to post_path(post), class: "text-decoration-none" do %>
            <p><%= simple_format post.description %></p>
            <p><%= post.value %></p>
            <p><%= post.prefecture %></p>
          <% end %>
        </div>
        <div class="card-tags">
          <ul>
            <li><a href="#">Tokyo</a></li>
            <li><a href="#">Hotel</a></li>
            <li><a href="#">Full-Time</a></li>
          </ul>
        </div>
      </div>

      <div class="card-footer">
        <ul>
          <li class="published-date">Postado em <%= post.created_at.strftime("%F") %> </li>
          <li class="counting-icon"><a href="#"><i class="fas fa-share-square">Share</i><span class="numero">8</span></a></li>
          <li class="counting-icon"><a href="#"><i class="fas fa-folder-plus">Keep</i><span class="numero">3</span></a></li>
        </ul>
      </div>
    </div>
    <% end %>
  </div>
</div>
