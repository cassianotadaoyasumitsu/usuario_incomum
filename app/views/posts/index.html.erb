<%= render 'shared/navbar' %>
<div class="container p-5 mt-5 mb-5">
  <div class="row justify-content-around">
    <% @posts.shuffle.each do |post| %>
    <% if post.company %>
    <div class="card m-3" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= post.title %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= post.prefecture %></h6>
        <p class="card-text"><%= simple_format post.description %></p>
        <p class="card-text">Â¥ <%= post.value %></p>
        <%= link_to "Mais", post_path(post), class: "btn btn-outline-primary btn-sm w-50" %>
        <% if user_signed_in? %>
          <% if current_user.id == post.user_id %>
            <%= link_to "Apagar", post_path(post),
            method: :delete,
            data: { confirm: 'Tem certeza?' },
            class: 'btn btn-outline-danger btn-sm' %>
          <% else %>
          <%end%>
        <% else %>
        <% end %>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
</div>
