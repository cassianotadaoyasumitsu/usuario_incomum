

<% if current_user.kind == nil || current_user.kind == "" %>

<div class="row justify-content-center">
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Escolha seu tipo de Usuário
  </button>
</div>

<%= render 'shared/modal' %>

<% elsif current_user.kind == "Usuário" %>

  <p>Nome: <%= @user.name %> </p>
  <p>Sexo: <%= @user.gender %> </p>
  <p>Idade: <%= @user.age %> </p>
  <p>Endereço: <%= @user.address %> </p>
  <p>Telefone: <%= @user.phone %> </p>
  <p>Prefeitura: <%= @user.prefecture %> </p>
  <p>Nihongo: <%= @user.nihongo %> </p>
  <p>Sobre você: <%= @user.note %> </p>
  <% if @user.work %>
    <p> Estou trabalhando no momento. </p>
  <% else %>
    <p> Estou procurando emprego.</p>
  <% end %>
  <%= link_to "Editar Perfil", edit_user_path(@user), class: "btn btn-outline-primary btn-sm btn-block" %>
  <%= link_to "Apagar Conta", user_path(current_user), class: 'btn btn-outline-danger btn-sm btn-block', method: :delete, data: { confirm: 'Você tem certeza? Isso apagara sua conta!' } %>

<% else %>

  <p>Nome da Empreiteira: <%= @user.name %> </p>
  <p>Telefone: <%= @user.phone %> </p>
  <p>Prefeitura: <%= @user.prefecture %> </p>
  <p>Endereço: <%= @user.address %> </p>
  <p>Sobre a empreiteira: <%= @user.note %> </p>
  <%= link_to "Editar Perfil", edit_user_path(@user), class: "btn btn-outline-primary btn-sm btn-block" %>
  <%= link_to "Apagar Conta", user_path(current_user), class: 'btn btn-outline-danger btn-sm btn-block', method: :delete, data: { confirm: 'Você tem certeza? Isso apagara sua conta!' } %>

<% end %>
